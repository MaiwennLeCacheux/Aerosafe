<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informations"
    android:id="@+id/informationlayout"
    android:background="#C3D7F4">


    <android.support.v4.view.ViewPager
        android:id="@+id/slideViewPager"
        android:layout_width="304dp"
        android:layout_height="655dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v4.view.ViewPager>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dotsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/polygon_left"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="343dp"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/polygon_right"
            tools:layout_editor_absoluteX="362dp"
            tools:layout_editor_absoluteY="343dp"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btnMapUp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/map_up"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="666dp"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/menu_home"
            tools:layout_editor_absoluteX="343dp"
            tools:layout_editor_absoluteY="666dp"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/menu_map"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="666dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>